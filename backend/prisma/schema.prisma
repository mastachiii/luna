generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  username         String         @unique
  password         String
  email            String         @unique
  displayName      String
  profilePicture   String?
  friends          User[]         @relation("UserFriends")
  conversations    Conversation[]
  messages         Message[]
  requestsReceived User[]         @relation("received")
  requestsSent     User[]         @relation("sent")

  // Just to suppress the error, wont be used in any way..
  symmetricFriends  User[] @relation("UserFriends")
  symmetricReceived User[] @relation("received")
  symmetricSent     User[] @relation("sent")
}

model Conversation {
  id       Int       @id @default(autoincrement())
  messages Message[]
  users    User[]
}

model Message {
  id             Int           @id @default(autoincrement())
  message        String
  dateSent       DateTime
  user           User?         @relation(fields: [userId], references: [id])
  userId         Int?
  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId Int?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
